{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": ["dist", "*.gen.ts"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "none",
			"lineWidth": 100
		}
	},
	"linter": {
		"enabled": true,
		"ignore": ["dist", "*.gen.ts"],
		"rules": {
			"recommended": true
		}
	}
}
