{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommitTypeAll(chore)"],
  "packageRules": [
    {
      "groupName": "opentelemetry",
      "matchPackageNames": ["/^opentelemetry/", "/^tracing-opentelemetry/"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "wit",
      "matchPackageNames": ["/^wit-bindgen/", "/^wit-component/"],
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "wasmtime",
      "matchPackageNames": ["/^wasi-/", "/^wasmtime/"],
      "matchUpdateTypes": ["major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch", "pin", "digest", "lockFileMaintenance"],
      "groupName": "patch updates",
      "automerge": true
    }
  ],
  "automergeType": "branch",
  "lockFileMaintenance": {
    "enabled": true
  },
  "nix": {
    "enabled": true
  }
}
